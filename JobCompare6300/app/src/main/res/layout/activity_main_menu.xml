<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.seclass.jobcompare6300.MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to the Job App!"
            android:textAlignment="center"
            android:background="@color/GT_GOLD"
            android:textColor="@color/GT_NAVY"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDEDED"
            android:text="What would you like to do?"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/currJobButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/GT_NAVY"
                    android:insetTop="20sp"
                    android:insetBottom="20sp"
                    android:onClick="onClick"
                    android:paddingVertical="30sp"
                    android:paddingTop="6dp"
                    android:text="Enter / Edit Current Job Details"
                    android:textColor="@color/GT_GOLD"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/offersButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/GT_NAVY"
                    android:insetTop="20sp"
                    android:insetBottom="20sp"
                    android:onClick="onClick"
                    android:paddingVertical="30sp"
                    android:text="Enter Job Offers"
                    android:textColor="@color/GT_GOLD"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/compSettButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/GT_NAVY"
                    android:insetTop="20sp"
                    android:insetBottom="20sp"
                    android:onClick="onClick"
                    android:paddingVertical="30sp"
                    android:text="Adjust Comparison Settings"
                    android:textColor="@color/GT_GOLD"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/jobListButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/GT_NAVY"
                    android:insetTop="20sp"
                    android:insetBottom="20sp"
                    android:onClick="onClick"
                    android:paddingVertical="30sp"
                    android:text="View Job Offers"
                    android:textColor="@color/GT_GOLD"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>